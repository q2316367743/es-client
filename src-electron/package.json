{
    "name": "es-client",
    "version": "3.1.6",
    "description": "elasticsearch客户端",
    "main": "main.js",
    "type": "commonjs",
    "author": {
        "name": "Esion",
        "email": "m17762618644@163.com",
        "url": "https://blog.esion.xyz"
    },
    "repository": {
        "type": "gitee",
        "directory": "/",
        "url": "https://gitee.com/qiaoshengda/es-client"
    },
    "license": "Apache-2.0",
    "homepage": "https://es-client.esion.xyz",
    "scripts": {
        "start": "chcp 65001 && electron main.js",
        "build": "electron-builder"
    },
    "keywords": [
        "es-client"
    ],
    "dependencies": {
        "axios": "^1.6.2"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "xyz.esion.es-client",
        "productName": "es-client",
        "asar": true,
        "copyright": "Copyright © 2024 esion",
        "directories": {
            "output": "release/"
        },
        "files": [
            "main.js",
            "preload.js",
            "package.json",
            "dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "artifactName": "${productName}_${version}.${ext}",
            "target": {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}",
            "icon": "dist/logo256.png"
        },
        "linux": {
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "dist/logo256.png",
            "maintainer": "esion",
            "description": "elasticsearch客户端"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "dist/favicon.ico",
            "uninstallerIcon": "dist/favicon.ico",
            "installerHeader": "dist/favicon.ico",
            "installerHeaderIcon": "dist/favicon.ico",
            "uninstallDisplayName": "${productName}${version}",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "es-client",
            "deleteAppDataOnUninstall": false,
            "runAfterFinish": true,
            "menuCategory": false,
            "language": "2052",
            "perMachine": true
        },
        "releaseInfo": {
            "releaseNotes": ""
        },
        "publish": [
            {
                "provider": "generic",
                "url": "https://es-client.esion.xyz/electron/"
            }
        ]
    },
    "electronDownload": {
        "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
}
